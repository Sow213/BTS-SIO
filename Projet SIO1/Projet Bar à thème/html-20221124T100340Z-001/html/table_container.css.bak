
table.boostrap4_dark_striped {
    font-size: 1rem;
    font-weight: 400;
    line-height: 1.5;
    color: #fff;
    background-color: #212529;
    text-align: left;
    box-sizing: border-box;
    border-collapse: collapse;
    width: 100%;
    margin-bottom: 1rem;
}

table.boostrap4_dark_striped thead th {
    font-size: 1rem;
    line-height: 1.5;
    color: #fff;
    border-collapse: collapse;
    box-sizing: border-box;
    text-align: inherit;
    padding: .75rem;
    border-top: 1px solid #dee2e6;
    vertical-align: bottom;
    border-bottom: 2px solid #dee2e6;
}

table.boostrap4_dark_striped td {
    font-size: 1rem;
    font-weight: 400;
    line-height: 1.5;
    color: #fff;
    text-align: left;
    border-collapse: collapse;
    box-sizing: border-box;
    padding: 0.75rem;
    vertical-align: top;
    border-top: 1px solid rgba(255, 255, 255, .08);
}

table.boostrap4_dark_striped tbody tr:nth-of-type(odd) {
    background-color: rgba(255, 255, 255, .05);
}














/* ----------- Non table related styles */

.table_container {
    max-width: 80vw;
    margin-left: auto;
    margin-right: auto;
}

body {
    font-family: sans-serif;
}